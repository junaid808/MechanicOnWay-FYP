<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Rims"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    >
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav_view"
            app:headerLayout="@layout/header"
            app:menu="@menu/main_menu"
            android:layout_gravity="start"

            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#015fea"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/menu2"
                app:title="MECHANIC ON WAY" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/Size17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img17"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="17 x 7.5 Inches"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img17"

                            />
                        <TextView
                            android:id="@+id/price17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Size17"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="RS 30,000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img17"

                            />

                        <ImageView
                            android:id="@+id/img17"
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/oil"
                            android:onClick="goToWheelForm"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/Size15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img15"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="15 x 6.5 Inches"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img15"

                            />
                        <TextView
                            android:id="@+id/price15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Size15"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="RS 25,000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img15"

                            />

                        <ImageView
                            android:id="@+id/img15"
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/transmission"
                            android:onClick="goToWheelForm"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/Size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img13"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="13 x 5.5 Inches"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img13"

                            />
                        <TextView
                            android:id="@+id/price13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Size13"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="RS 23,0000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img13"

                            />

                        <ImageView
                            android:id="@+id/img13"
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/oil"
                            android:onClick="goToWheelForm"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/Size12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img12"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="12 x 4.5 Inches"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img12"

                            />
                        <TextView
                            android:id="@+id/price12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Size12"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="RS 21,000"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/img12"

                            />

                        <ImageView
                            android:id="@+id/img12"
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/transmission"
                            android:onClick="goToWheelForm"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>